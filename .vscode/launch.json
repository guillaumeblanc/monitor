    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Collect Fusion Solar",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "-u",
                "${env:FUSIONSOLAR_USER}",
                "-p",
                "${env:FUSIONSOLAR_PASSWORD}",
                "-o",
                "data/latest"
            ]
        },
        {
            "name": "Python: Standardize data",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "-s",
                "data/latest",
                "-d",
                "data/std",
                "-c",
                "src/fus2std.json"
            ]
        },
        {
            "name": "Python: Aggregate data",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "-s",
                "data/std",
                "-d",
                "data/agg"
            ]
        },
        {
            "name": "Python: Google Drive",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "download",
                "-l",
                "data/previous",
                "-d",
                "${env:GDRIVE_FOLDER}",
                "-s",
                "aggregated",
                "-c",
                "${env:GDRIVE_CREDENTIALS}",
                "-m",
                "*/monthly*"
            ]
        }
    ]
}